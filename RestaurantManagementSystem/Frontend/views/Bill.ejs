    <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
    <script>
    
        // Get the current pathname
        const pathname = window.location.pathname;
    
        // Extract order number from the pathname
        const numberPart = pathname.substring('/ShowItems'.length);
        const Number = numberPart.trim();
    
        // Function to dynamically inject food items into the .food-items-row
        async function loadFoodItems() {
            const response = await fetch(`http://localhost:5000/GetOrder/${5}`, {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            let TotalOrderedItems = 0;
            let TotalAmount = 0;
    
            const responseFormat = await response.json();
            const order = responseFormat.data;
            const foodItems = order.Items_Ordered;
            const flatFoodItems = foodItems.flat();

            const combinedFoodItems = flatFoodItems.reduce((acc, item) => {
                // Check if an item with the same name already exists in the accumulator
                const existingItem = acc.find(i => i.Name === item.Name);


                if (existingItem) {
                    TotalOrderedItems = TotalOrderedItems + item.Quantity;
                    TotalAmount = TotalAmount + item.Quantity * item.Price;
                    // If item exists, update the quantity and total price
                    existingItem.Quantity += item.Quantity;
                    existingItem.Price += item.Quantity * item.Price;
                } else {

                    TotalAmount=TotalAmount+item.Price;
                    TotalOrderedItems=TotalOrderedItems+item.Quantity;
                    // If item doesn't exist, add it to the accumulator with total price
                    acc.push({
                        ...item,
                        Price: item.Quantity * item.Price // Calculate the initial total price
                    });
                }

                return acc;
            }, []);
    
            // Select the .food-items-row container
            const foodItemsRow = document.querySelector('.food-items-row');

            // Build the HTML for the combined items
            let foodItemHTML = '<div class="food-category-item"><h4>Billing Details</h4>';

            combinedFoodItems.forEach((item) => {
                foodItemHTML += `
                    <div class="item-container">
                        <h4><a href="#">${item.Name}</a></h4>
                        <p class="item-quantity">Quantity: ${item.Quantity}</p>
                        <p class="item-price">Price: ₹${item.Price}</p>
                    </div>
                `;
            });

            foodItemHTML += `
                <div class="food-category-item">
                    <h4>Total Amount : ₹ ${TotalAmount}</h4>
                </div>
            </div>`; // Close the main food-category-item container

            // Insert the HTML into the .food-items-row
            foodItemsRow.innerHTML = foodItemHTML;

            generateQRCode(TotalAmount);
        }
        function generateQRCode(TotalAmount) {
            const qrcodeContainer = document.getElementById(`qrcode`);

            if(qrcodeContainer.innerHTML != '')
            {
                qrcodeContainer.innerHTML = '';
            }
            else
            {
                // Generate and display the QR code
                QRCode.toDataURL(String(TotalAmount))
                    .then(function (url) {
                        const img = document.createElement("img");
                        img.src = url;
                        qrcodeContainer.appendChild(img);
                    })
                    .catch(function (error) {
                        console.error("Error generating QR Code:", error);
                    });
            }
        }
    
        // Call the function to inject the food items when the page loads
        loadFoodItems();
    </script>
    

